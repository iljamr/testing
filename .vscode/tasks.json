                "single_drone_avia.launch",
                "single_drone_dynobs.xml",
                "single_drone_mid360.launch",
                "single_drone_mid360_dynobs.launch",
                "single_drone_os128.launch",
                "triple_drone.launch",
                "triple_drone_mid360.launch",
